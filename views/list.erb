<h1>Words</h1>

<% @list.each do |word| %>
  <p><%= word.word %></p>
<% end %>

<h4>Add an item to the list:</h4>

<form action="/" method="post">
  <div class="form-group">
    <label for="name">Word</label>
    <input id="word" type="text" name="word" class="form-control">
  </div>
  <button type="submit" class="btn">Submit</button>
</form>